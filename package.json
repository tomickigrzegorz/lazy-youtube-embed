{
  "name": "youtubelazy",
  "version": "1.1.3",
  "description": "Lazy loading youtube on lightbox",
  "author": "Grzegorz Tomicki",
  "license": "MIT",
  "main": "dist/js/youtubeLazy.js",
  "scripts": {
    "dev": "concurrently \"yarn sass:dev\" \"yarn sass:prod\" \"yarn watch\"",
    "prod": "yarn build && yarn sass:prod && yarn postcss:global && yarn postcss:lazyYoutube && yarn postcss:ie && yarn lib:version",
    "build": "rollup -c --environment PRODUCTION",
    "watch": "rollup -c -w",
    "sass:prod": "sass --no-source-map sources/scss:docs/css",
    "sass:dev": "sass --watch sources/scss:docs/css",
    "postcss:global": "postcss docs/css --dir docs/css",
    "postcss:lazyYoutube": "postcss --ext min.css docs/css/youtubeLazy.css --dir dist/css/",
    "postcss:ie": "postcss --u postcss-css-variables --no-map --ext ie.min.css docs/css/youtubeLazy.css --dir dist/css/",
    "lib:version": "node ./scripts/version.js"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.15",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-css-variables": "^0.18.0",
    "postcss-preset-env": "^7.2.3",
    "prettier": "^2.5.1",
    "rollup": "^2.66.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
